#include <stdio.h>
#include <conio.h>
int main()
{
char a[100];
int i,f=0;
puts("Vvedite stroku:" );
gets(a);
for(i=0;a[i]!='0';i++)
{
    if(a[i]=='.'||a[i]==','|| a[i]=='?'||a[i]=='!'||a[i]==':'||a[i]==';'||a[i]=='-'||a[i]==' '||a[i]=='"')
    {
        f++;
        printf("%c",a[i]);
    }
}
printf(" - vsego znakov = %d",f);
getch();
return 0;
}

